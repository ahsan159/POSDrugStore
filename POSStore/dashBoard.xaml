<Window x:Class="POSStore.dashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSStore"
        mc:Ignorable="d"
        Title="Companion POS" Height="750" Width="800">
    <Grid>
        <Viewbox Stretch="Fill" StretchDirection="Both"></Viewbox>
        <DockPanel>
            <Label DockPanel.Dock="Top" 
                   FontSize="32" FontWeight="Bold"
                   VerticalAlignment="Top" HorizontalAlignment="Center"
                   >
                   <!--Margin="10"-->
                <StackPanel Orientation="Horizontal">
                    <Image Source="./img/RX.png" Height="60"></Image>
                    <Label
                    Content="Companion POS" 
                        ></Label>
                </StackPanel>
            </Label>
            <TabControl DockPanel.Dock="Top" TabStripPlacement="Top" 
                    Margin="10"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    >
                <TabItem 
                     Height="40"                     
                     GotFocus="dashBoardOpen"
                     Name="dashboardtab"
                     >                    
                    <!--Header="Dash Board"-->
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="./img/dashboard.png" Height="30"></Image>
                            <Label Content="Dashboard"></Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFE5E5E5">
                        <DockPanel HorizontalAlignment="Stretch" Name="dashBaord">
                            <DockPanel Margin="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Aqua">
                                <StackPanel>
                                    <WrapPanel>
                                        <Button Content="Products" Name="pBtn"                                
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"
                                Margin="30"         
                                Click="openDrugList"></Button>
                                        <Button Content="Customers" Name="cBtn"
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"                                
                                Margin="30"
                                Click="openCustomerList"></Button>
                                        <Button Content="Sales" Name="saleBtn"
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"                                
                                Margin="30"
                                Click="openSaleList"></Button>
                                        <Button Content="Stocks" Name="stockBtn"
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"                                
                                Margin="30"
                                Click="openStockList"></Button>
                                        <!--<Button Content="Stocks" 
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"                                
                                Margin="30"></Button>
                        <Button Content="Stocks" 
                                Height="100" Width="100" 
                                FontSize="18" FontWeight="Bold"                                
                                Margin="30"></Button>-->
                                    </WrapPanel>
                                </StackPanel>
                            </DockPanel>
                        </DockPanel>
                    </Grid>
                </TabItem>
                <TabItem 
                     Height="40"
                     Name="newSaleTab"
                     >
                    <!--Header="New Sale"-->
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="./img/newSalesTab.png" Height="30"></Image>
                            <Label Content="New Sale"></Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Background="#FFE5E5E5">
                        <DockPanel>
                            <DockPanel DockPanel.Dock="Top" Height="50" VerticalAlignment="Top">
                                <Label Content="Invoice No." Margin="00,10,0,10" HorizontalAlignment="Left"></Label>
                                <TextBox Name="invoiceNo" 
                                         Margin="10,10,10,10" 
                                         MaxWidth="150" 
                                         MinWidth="100"
                                         HorizontalAlignment="Left" 
                                         IsReadOnly="True"
                                         Text="{Binding nsSaleTableName}"
                                         ></TextBox>
                                <Label Content="Customer Name:" Margin="0,10,0,10" HorizontalAlignment="Left"></Label>
                                <TextBox Name="customerName" 
                                         Margin="10,10,10,10" 
                                         MaxWidth="200" 
                                         MinWidth="150"
                                         HorizontalAlignment="Left" 
                                         Text="{Binding nsCustomerName}"
                                        ></TextBox>
                                <Label Content="Contact:" Margin="0,10,0,10" HorizontalAlignment="Left"></Label>
                                <TextBox Name="contactNo" 
                                         Margin="20,10,20,10" 
                                         MaxWidth="200" 
                                         MinWidth="150"
                                         HorizontalAlignment="Left" 
                                         Text="{Binding nsCustomerContact}"
                                         ></TextBox>
                            </DockPanel>
                            <Grid DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <DockPanel Grid.Column="0" Grid.ColumnSpan="2"
                                           >
                                    <DataGrid Name="newSaleDataGrid"
                                              AutoGenerateColumns="False"
                                              CanUserSortColumns="False"
                                              ItemsSource="{Binding}"
                                              SelectionUnit="FullRow"
                                              SelectedIndex="{Binding indexSelected}"
                                              SelectedCellsChanged="newSaleTable_SelectionChanged"                                              
                                        >
                                        <!--SelectionChanged="newSaleTable_SelectionChanged"-->
                                        <DataGrid.Columns>
                                            <DataGridComboBoxColumn Header="Product"        
                                                                    SelectedItemBinding="{Binding selectedProduct}"
                                                                >
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <EventSetter Event="GotFocus" Handler="comboFocused"></EventSetter>
                                                        <EventSetter Event="SelectionChanged" Handler="comboSelected"></EventSetter>
                                                        <Setter Property="SelectedIndex" Value="{Binding selectedComboIndex}"></Setter>
                                                        <Setter Property="IsEditable" Value="True"></Setter>
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>
                                            <DataGridTextColumn Header="Quantity"
                                                                Binding="{Binding Quantity}"
                                                                ></DataGridTextColumn>
                                            <DataGridTextColumn Header="Price"
                                                                Binding="{Binding Price}"
                                                                IsReadOnly="True"
                                                                ></DataGridTextColumn>
                                            <DataGridTextColumn Header="Discount(%)"
                                                                Binding="{Binding Discount100}"
                                                                ></DataGridTextColumn>
                                            <DataGridTextColumn Header="Discount"
                                                                Binding="{Binding Discount}"
                                                                ></DataGridTextColumn>
                                            <DataGridTextColumn Header="Sale Tax"
                                                                Binding="{Binding SaleTax}"
                                                                IsReadOnly="True"
                                                                ></DataGridTextColumn>
                                            <DataGridTextColumn Header="Total"
                                                                IsReadOnly="True"
                                                                Binding="{Binding Total}"
                                                                ></DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                                <DockPanel Grid.Column="2" Grid.ColumnSpan="1">
                                    <StackPanel HorizontalAlignment="Stretch">
                                        <Label Name="drugName" Margin="10,10,10,10" FontSize="24" FontWeight="Bold"
                                        ></Label>
                                        <Label Name="drugPrice" Margin="10,10,10,10" FontSize="20" FontWeight="Normal"
                                        ></Label>
                                        <Label Name="drugStock" Margin="10,10,10,10" FontSize="20" FontWeight="Normal"
                                        ></Label>
                                        <Label Content="Total:" Margin="10,20,10,10" FontSize="20" FontWeight="Bold"></Label>
                                        <Label Name="totalCost"  Margin="10,10,10,10" FontSize="20" FontWeight="Bold"
                                        ></Label>
                                        <DockPanel HorizontalAlignment="Stretch">
                                            <Label Content="Discount" Margin="10,10,10,10" FontSize="20" FontWeight="Bold"                                                   
                                                   HorizontalAlignment="Left"
                                                   ></Label>
                                            <TextBox Name="discountTotal" Margin="0,10,10,10"  FontSize="20" FontWeight="Bold" MinWidth="140"
                                                     HorizontalAlignment="Right"                                                     
                                            KeyDown="paidTotal_KeyDown"
                                        ></TextBox>
                                        </DockPanel>
                                        <DockPanel HorizontalAlignment="Stretch" >
                                            <Label Content="Paid" Margin="10,10,10,10" FontSize="20" FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   ></Label>
                                            <TextBox Name="paidTotal" Margin="10,10,10,10"  FontSize="20" FontWeight="Bold" MinWidth="140"
                                                     HorizontalAlignment="Right"                                                     
                                             KeyUp="paidTotal_KeyDown"
                                        ></TextBox>
                                            <!-- Text="{Binding nsGrandTotal}"                                      -->
                                        </DockPanel>
                                        <DockPanel HorizontalAlignment="Stretch" >
                                            <Label Content="Balance" Margin="10,10,10,10" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left"></Label>
                                            <TextBox Name="balanceTotal" Margin="10,10,10,10"  FontSize="20" FontWeight="Bold" IsReadOnly="True"
                                                     MinWidth="140"
                                                     HorizontalAlignment="Right"
                                                     ></TextBox>
                                        </DockPanel>
                                        <Button x:Name="checkoutBtn" Height="80" 
                                                Click="checkOut"
                                                Margin="10 0 10 0"
                                                >
                                            <!--Content="Checkout"-->
                                            <StackPanel Orientation="Vertical">
                                                <Label Content="Checkout" FontWeight="Normal" FontSize="16"></Label>
                                                <Image Source="./img/checkout.png" Width="40"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DockPanel>
