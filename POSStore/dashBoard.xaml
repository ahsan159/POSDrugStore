        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Right">
            <Button Content="10" Width="50" Height="50"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Stretch">
            <Button Content="20" Width="50" Height="50" HorizontalAlignment="Right"></Button>
        </StackPanel>
        </StackPanel>-->

</Window>

